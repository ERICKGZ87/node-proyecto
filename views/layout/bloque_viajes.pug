
.row.proximos-viajes
    each viajes in viajesB
        .col-md-6.col-lg-4.mb-4
            .card
                img(src=`img/destinos_${viajes.imagen}.jpg`)
                .card-body
                            
                    h2= viajes.titulo
                        p 
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#00b341" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <rect x="4" y="5" width="16" height="16" rx="2" />
                                <line x1="16" y1="3" x2="16" y2="7" />
                                <line x1="8" y1="3" x2="8" y2="7" />
                                <line x1="4" y1="11" x2="20" y2="11" />
                                <line x1="11" y1="15" x2="12" y2="15" />
                                <line x1="12" y1="15" x2="12" y2="18" />
                                </svg>
                                | #{viajes.fecha_ida} -  #{viajes.fecha_vuelta}

                        p 
                            svg.icon.icon-tabler.icon-tabler-user-plus(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#00b341' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                circle(cx='9' cy='7' r='4')
                                path(d='M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                                path(d='M16 11h6m-3 -3v6')

                                | #{viajes.disponibles} Disponibles

                        p= viajes.descripcion.substr(0,100) +'...'

                        a(href=`viajes/${viajes.slug}`, class="btn btn-success btn-block") Mas informacion
